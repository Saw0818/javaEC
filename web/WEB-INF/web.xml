<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.LoginServlet</servlet-class>
        <init-param>
            <param-name>customerHomePage</param-name>
            <param-value>homeCustomer.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>staffHomePage</param-name>
            <param-value>staffMainPage.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>customerHeader</param-name>
            <param-value>customerHeader.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>staffHeader</param-name>
            <param-value>staffHeader.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>staffFooter</param-name>
            <param-value>staffFooter.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>adminHomePage</param-name>
            <param-value>admMainPage.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>adminHeader</param-name>
            <param-value>admHeader.jsp</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>EditProfile</servlet-name>
        <servlet-class>Controller.EditProfile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
